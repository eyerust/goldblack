[Unit]
Description=Install the current NVIDIA drivers in flatpak to avoid desync
Wants=multi-user.target
Before=display-manager.service
After=network-online.target bazzite-flatpak-manager.service mullvad-daemon.service

[Service]
Type=oneshot
ExecStart=/usr/bin/nm-online -q --timeout=20
ExecStart=/usr/libexec/goldblack-nvidia-flatpak-sync
TimeoutStartSec=90
RemainAfterExit=yes

[Install]
WantedBy=graphical.target